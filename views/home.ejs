<body>
    <div id = "main_section">
        <form action="/create-todo" method="POST">
        <h1>Todo App</h1>
        <div class="task">
            <div>
            <div class="task_head_cont">
                   <h5>DESCRIPTION</h5>
            </div>
         
            <div class="task_input_cont">
                <input type="text" name="task_name" class="input_style" placeholder="What do you want to do?">
            </div>  
            </div>            
        </div>

        <div class="task">
            <div class="flex_cont">
            <div class="border-right">
                <div class="task_head_cont">
                       <h5>CATEGORY</h5>
                </div>
             
                <div class="task_input_cont">
                    <!-- <select name="category" id="category" class="input_style">
